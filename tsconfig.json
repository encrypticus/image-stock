{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "hocs/*": ["hocs/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "redux/*": ["redux/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
